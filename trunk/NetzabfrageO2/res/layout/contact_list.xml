<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TextView android:id="@+id/contact_list_header" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" ></TextView>
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/white"
	    android:layout_margin="2dip" />
    <ListView
    	android:id="@+id/contact_list" 
    	android:layout_height="0dip"
    	android:layout_weight="1" android:layout_width="fill_parent"
   	/>
    <TextView android:text="@string/disclaimer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right"></TextView>
    

</LinearLayout>
